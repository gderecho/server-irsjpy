{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "irsjpy-server",
        "namespace": "<NAMESPACE>"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "irsjpy-server"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "irsjpy-server"
                }
            },
            "spec": {
                "containers": [{
                    "name": "irsjpy-server",
                    "image": "<IMAGE>",
                    "imagePullPolicy": "Always",
                    "ports": [
                        {
                            "containerPort": 80
                        }
                    ],
                    "env": [
                        {
                            "name": "IRSJPY_DATABASE_URL",
                            "valueFrom": {
                                "secretKeyRef": {
                                    "name": "elephant-url",
                                    "key": "string"
                                }
                            }
                        },
                        {
                            "name": "GOOGLE_MAILER_CLIENT_ID",
                            "valueFrom": {
                                "secretKeyRef": {
                                    "name": "google-mailer",
                                    "key": "client-id"
                                }
                            }
                        },
                        {
                            "name": "GOOGLE_MAILER_REFRESH_TOKEN",
                            "valueFrom": {
                                "secretKeyRef": {
                                    "name": "google-mailer",
                                    "key": "refresh-token"
                                }
                            }
                        },
                        {
                            "name": "GOOGLE_MAILER_SECRET",
                            "valueFrom": {
                                "secretKeyRef": {
                                    "name": "google-mailer",
                                    "key": "secret"
                                }
                            }
                        },
                        {
                            "name": "IRSJPY_SERVER_PORT",
                            "value": "80"
                        }
                    ]
                }],
                "imagePullSecrets": [{
                    "name": "github"
                }]
            }
        }
    }
}
